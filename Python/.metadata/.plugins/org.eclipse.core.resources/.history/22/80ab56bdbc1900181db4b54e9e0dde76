#5) WAP accept 3 integer numbers and
#find greatest number

a = int(input("Enter the interger Number1 : "))
b = int(input("Enter the interger Number2 : "))
c = int(input("Enter the interger Number3 : "))
 
if a!=b!=c :
    if a==b and a>c :
        print("The greatest Number is",a)
    else :
        print("The greatest Number is",c)
    elif a==c and a>b :
        print("The greatest Number is",a)
    elif  b==c and b>c :
        print("The greatest Number is",b)
                                
    else :
        print("The greatest Number is",c)
else :
    print("All the three numbers ",a ,b ,"and", c ,"are Same")











if a>b and a>c:
    print("The greatest Number is",a)
elif b>a and b>c :
    print("The greatest Number is",b)   
else :
    print("The greatest Number is",c) 





