from itertools import count

# If statement assignments

#1) WAP accept a string and check 'a' character exist
#in the given string are not

b = input("Enter a Name : ")

if "a" in b :
    print("a","is in the string", b)
    print(len(b))
    print(count(len("a")))
else :
    print("a","is not in the string", b)

#2) write a script accept 2 number's and find greatest number

a = int(input("Enter Number1 : "))
b = int(input("Enter Number2 : "))

if a!=b :
    if a>b :
        print("Enter the greatest Number",a)
    if a<b :
        print("Enter the greatest Number",b)
else :
    print("Both and ",a "and", b "are Equal")

